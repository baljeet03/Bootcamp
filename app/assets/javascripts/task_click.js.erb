$(document).ready(function () {
  // change the priority color based on priority
  var x = document.getElementsByClassName("priorityColor");
  var color = ["Red", "lightcoral", "lightskyblue","grey"];
  var priority = ["Urgent", "High", "Medium", "Low"];
  // if the doc is not present

  if(!x || !x[0] || !x[0].style)return;
  x[0].style.color = color[priority.indexOf(x[0].innerHTML.toString())];

  //change the status color based on status
  var y = document.getElementsByClassName("taskStatus");
  color = ["green", "Red"];
  var status = ["active", "inactive"];
  y[0].style.color = color[status.indexOf(y[0].innerHTML.toString().trim())]

});

// dropdown on click action

$(document).ready(function () {
  $('#dropdownMenu1').click(function () {
    if($(this).hasClass('open')){
      $(this).removeClass('open')
    }
    else {
      $(this).addClass('open');
    }
  });
});


// auto fade the flash message on success
$(document).ready(function () {
  $(".alert-success").fadeOut(3000);
});

// on clicking on reminder pop-up show all the reminders
$(document).ready(function () {
  if(window.location.pathname == "/"){
    $(".gritter-item").click(function () {
      window.location = "/notifications/show";
    });
  }
});

// on swiping remove the reminders
$(document).ready(function () {
  $("tr[data-swipe]").on("click", function () {
    return false;
  }).dblclick(function () {
    $(this).hide();
    window.location = $(this).data("swipe");
  });
});


