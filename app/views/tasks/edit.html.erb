<h1>Update My task</h1>

<div class="span8 offset3">
  <%= form_for(@task) do |f| %>

      <%= f.error_messages :header_messages => "Invalid", :message => "Please fill the data matching requirements" %>
      <%= f.label "Task Name" %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description, class: "description" %>

      <%= f.label :deadline %>
      <%= f.date_select :deadline, :order => [:day, :month, :year], :prompt => true%>
      <br>

      <div style="display:inline">
        <%= f.radio_button :priority,"Urgent" %>
        <%= f.label :priority, "Urgent" %>

        <%= f.radio_button :priority,"High" %>
        <%= f.label :priority, "High" %>

        <%= f.radio_button :priority,"Medium" %>
        <%= f.label :priority, "Medium" %>

        <%= f.radio_button :priority,"Low" %>
        <%= f.label :priority,"Low" %>
      </div>

      <%= f.submit "Update", class: "btn btn-large btn-primary" %>
  <% end %>

</div>