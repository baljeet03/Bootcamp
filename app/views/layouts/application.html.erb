<!DOCTYPE html>
<html>
<head>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div>
  <div class="pull-right btn">
    <%= link_to "Create task", new_tasks_path() %>
  </div>
  <ul class="btn nav nav-pills">
    <li class="<%= :active if params[:status] == "active" %>"><%= link_to "Open Task" , filter_on_status_tasks_path("active") %></li>
    <li class="<%= :active if params[:status] == "inactive" %>"><%= link_to "Completed Task" , filter_on_status_tasks_path("inactive") %></li>
  </ul>
</div>

<%= yield   %>


</body>
</html>
