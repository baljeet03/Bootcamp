  gem 'mysql2' , '~> 0.3.10'
  gem 'annotate','2.5.0'
  gem 'bcrypt-ruby', '~>3.0.1'
  gem 'brakeman', require: false
end

# pagination gem
gem 'will_paginate', '~> 3.1.1'

#dynamic forms
